<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.lab1">

    <uses-feature
        android:name="android.permission.CAMERA"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListItemsActivity"
            android:label="@string/title_activity_list_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChatWindow"
            android:label="@string/title_activity_chat_window"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WeatherForecast"
            android:label="@string/title_activity_weather_forecast"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.jasonbenoit.lab11.StartActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>